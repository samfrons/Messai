# Literature System Environment Configuration

# Literature Mode
LITERATURE_MODE="true"
NEXT_PUBLIC_LITERATURE_MODE="true"

# Database Configuration (shared with main app)
DATABASE_URL="file:./prisma/dev.db"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3004"
NEXTAUTH_SECRET="generate-using-openssl-rand-base64-32"

# OAuth Providers (same as main app)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# AI Services for Literature Processing
OPENROUTER_API_KEY="your-openrouter-api-key"  # Get from https://openrouter.ai/keys

# Literature-specific settings
LITERATURE_DEFAULT_PAGE_SIZE="10"
LITERATURE_MAX_BATCH_SIZE="50"
AI_PROCESSING_RATE_LIMIT="1000"  # ms between API calls
AI_DEFAULT_MODEL="openai/gpt-4-turbo"

# Feature flags for literature system
ENABLE_AI_PROCESSING="true"
ENABLE_SEMANTIC_SEARCH="true"
ENABLE_CITATION_NETWORKS="true"
ENABLE_PAPER_VALIDATION="true"

# Performance settings
LITERATURE_CACHE_TTL="300"  # 5 minutes
DATABASE_POOL_SIZE="5"

# Development settings
NODE_ENV="development"
LOG_LEVEL="info"
LITERATURE_DEBUG="false"

# Optional: Analytics (if separate from main app)
# GOOGLE_ANALYTICS_ID="G-LITERATURE-ID"

# Optional: Error tracking (if separate from main app)  
# SENTRY_DSN="https://your-literature-sentry-dsn@sentry.io/project-id"