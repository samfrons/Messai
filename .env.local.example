# Copy this file to .env.local and fill in your values

# Database
# For local development with SQLite (easiest to start):
DATABASE_URL="file:./dev.db"

# For PostgreSQL (production-ready):
# DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/messai?schema=public"

# NextAuth Configuration (REQUIRED)
NEXTAUTH_URL="http://localhost:3003"
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-minimum-32-characters-long"

# Email Configuration (OPTIONAL - leave blank to see tokens in console)
SMTP_HOST=""
SMTP_PORT=""
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM="MESSAi <noreply@messai.com>"

# Email Verification (set to false for easier testing)
REQUIRE_EMAIL_VERIFICATION="false"
NEXT_PUBLIC_REQUIRE_EMAIL_VERIFICATION="false"

# Google OAuth (OPTIONAL)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""